{
  "swagger": "2.0",
  "info": {
    "title": "ADMIN API MANAGEMENT",
    "version": "1.0.0",
    "description": "API for managing ADMIN"
  },
  "host": "localhost:5000",
  "basePath": "/api",
  "paths": {
    "/vendors": {
      "get": {
        "summary": "Get all vendors",
        "responses": {
          "200": { 
            "description": "A list of vendors",
            "schema": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "id": { "type": "string" },
                  "company_name": { "type": "string" },
                  "contact_email": { "type": "string" },
                  "contact_phone_number": { "type": "string" },
                  "business_type": { "type": "string" }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create a vendor",
        "parameters": [
          {
            "in": "body",
            "name": "vendor",
            "description": "Vendor to create",
            "schema": {
              "type": "object",
              "properties": {
                "company_name": { "type": "string" },
                "contact_email": { "type": "string" },
                "contact_phone_number": { "type": "string" },
                "business_type": { "type": "string" }
              }
            }
          }
        ],
        "responses": {
          "201": { "description": "Vendor created successfully" },
          "400": { "description": "Invalid input" }
        }
      }
    },
    "/vendors/{id}": {
      "get": {
        "summary": "Get a vendor by ID",
        "parameters": [{ "in": "path", "name": "id", "required": true, "type": "string" }],
        "responses": {
          "200": {
            "description": "Vendor details",
            "schema": {
              "type": "object",
              "properties": {
                "id": { "type": "string" },
                "company_name": { "type": "string" },
                "contact_email": { "type": "string" },
                "contact_phone_number": { "type": "string" },
                "business_type": { "type": "string" }
              }
            }
          },
          "404": { "description": "Vendor not found" }
        }
      },
      "put": {
        "summary": "Update a vendor",
        "parameters": [
          { "in": "path", "name": "id", "required": true, "type": "string" },
          {
            "in": "body",
            "name": "vendor",
            "schema": {
              "type": "object",
              "properties": {
                "company_name": { "type": "string" },
                "contact_email": { "type": "string" },
                "contact_phone_number": { "type": "string" },
                "business_type": { "type": "string" }
              }
            }
          }
        ],
        "responses": {
          "200": { "description": "Vendor updated successfully" },
          "404": { "description": "Vendor not found" },
          "400": { "description": "Invalid input" }
        }
      },
      "delete": {
        "summary": "Delete a vendor",
        "parameters": [{ "in": "path", "name": "id", "required": true, "type": "string" }],
        "responses": {
          "200": { "description": "Vendor deleted successfully" },
          "404": { "description": "Vendor not found" }
        }
      }
    },
  "/auth/login": {
      "/auth/reset-password": {
        "post": {
          "summary": "Reset password for a vendor or vendor user",
          "parameters": [
            {
              "in": "body",
              "name": "credentials",
              "description": "Email and new password",
              "schema": {
                "type": "object",
                "properties": {
                  "email": { "type": "string", "example": "vendor@example.com" },
                  "newPassword": { "type": "string", "example": "newsecurepassword" }
                }
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Password reset successful",
              "schema": {
                "type": "object",
                "properties": {
                  "message": { "type": "string" }
                }
              }
            },
            "400": {
              "description": "Invalid input or new password matches the old password",
              "schema": {
                "type": "object",
                "properties": {
                  "error": { "type": "string" }
                }
              }
            },
            "404": {
              "description": "Email not found",
              "schema": {
                "type": "object",
                "properties": {
                  "error": { "type": "string" }
                }
              }
            }
          }
        }
      }
  },
    "/vendor/login": {
      "post": {
        "summary": "Authenticate vendor or vendor user",
        "parameters": [
          {
            "in": "body",
            "name": "credentials",
            "description": "Login credentials",
            "schema": {
              "type": "object",
              "properties": {
                "email": { "type": "string", "example": "vendor@example.com" },
                "password": { "type": "string", "example": "securepassword" }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Authentication successful",
            "schema": {
              "type": "object",
              "properties": {
                "token": { "type": "string" },
                "vendor": {
                  "type": "object",
                  "properties": {
                    "id": { "type": "string" },
                    "contact_email": { "type": "string" }
                  }
                },
                "vendorUser": {
                  "type": "object",
                  "properties": {
                    "id": { "type": "string" },
                    "email": { "type": "string" },
                    "role": { "type": "string" }
                  }
                }
              }
            }
          },
          "401": { "description": "Invalid email or password" },
          "400": { "description": "Invalid request body" }
        }
      }
    }
  }
}
